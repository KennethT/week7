<h1>Courses</h1>
<table>
  <tr>
    <th> Title </th>
    <th> Day or Night </th>
  </tr>

  <tbody>
    <% @user.courses.each do |course| %>
    <tr>
      <td> <%= link_to course.title, user_course_path(@company, course) %></td>
      <% if @course.day_night == true %>
      <td>day</td>
      <% else %>
      <td>night</td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', user_courses %>

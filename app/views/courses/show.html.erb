<h1>Courses</h1>
<table>
  <tr>
    <th> Title </th>
    <th> Day or Night </th>
  </tr>

<tbody>
    <% @courses.each do |course| %>
    <tr>
      <td> <%= link_to course.title, course_path(course) %></td>
      <% if @course.day_night == true %>
      <td>day</td>
      <% else %>
      <td>night</td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<% render 'form' %>

<%= link_to 'Back', courses %>

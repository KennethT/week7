<table>
  <tr>
    <th>Title</th>
    <th>Day or Night (Checked if night)</th>
  </tr>

  <tbody>
    <% @courses.each do |course|  %>
    <tr>
      <td><%= link_to course.title, course_path %> </td>
      <% if course.day_night == true %>
      <td>day</td>
      <% else %>
      <td>night</td>
        <% end %>
      <% if current_user %>
      <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }%></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>

</table>

<td><%= link_to "Add Course", new_course_path(@course) %></td>
